{% extends 'base-downmenu.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/articleShow.css') }}"/>
{% endblock %}

{% block customBody %}
    <main class="article container">
        <h1>{{ article.title }}</h1>
        <div class="article__header">
            <div class="article__header--details">
                <p>Автор(и): {{ article.authors }}</p>

                {% if article.journal == true %}
                    <p>Журнал: {{ article.journal }}</p>
                {% else %}
                    <p>Періодичне видання невідоме</p>
                {% endif %}

                {% if article.publisher == true %}
                    <p>Видавництво: {{ article.publisher }}</p>
                {% else %}
                    <p>Видавництво: невідоме</p>
                {% endif %}

                {% if article.publishedYear == true %}
                    <p>Рік публікації: {{ article.publishedYear }}</p>
                {% else %}
                    <p>Рік публікації: невідомий</p>
                {% endif %}

                {% if article.link == true %}
                    <p>Посилання на книгу: {{ article.link }}</p>
                {% else %}
                    <p>Посилання на книгу: недоступне</p>
                {% endif %}

                {% if article.annotation == true %}
                    <p>{{ article.annotation }}</p>
                {% endif %}
            </div>
            <div class="article__header--picture">
                <img src="/uploads/images/articles/{{ article.image }}" alt="{{ article.title }}">
            </div>
        </div>

        <div id="disqus_thread"></div>
        <script>

            /**
             *  RECOMMENDED CONFIGURATION VARIABLES: EDIT AND UNCOMMENT THE SECTION BELOW TO INSERT DYNAMIC VALUES FROM YOUR PLATFORM OR CMS.
             *  LEARN WHY DEFINING THESE VARIABLES IS IMPORTANT: https://disqus.com/admin/universalcode/#configuration-variables*/

            var disqus_config = function () {
                this.page.url = '{{ url('app_articleslibrary_show', {'id' : article.id}) }}';
                this.page.identifier = '{{ path('app_articleslibrary_show', {'id' : article.id}) }}';
            };

            (function() { // DON'T EDIT BELOW THIS LINE
                var d = document, s = d.createElement('script');
                s.src = 'https://mappedarchaeology.disqus.com/embed.js';
                s.setAttribute('data-timestamp', +new Date());
                (d.head || d.body).appendChild(s);
            })();
        </script>
        <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>


    </main>
{% endblock %}