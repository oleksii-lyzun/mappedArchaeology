{% extends 'base-downmenu.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/contactUs.css') }}" />
{% endblock %}

{% block customBody %}

    <div class="form-wrapper">
        {{ form_start(form) }}
            {{ form_row(form.login) }}
            {{ form_row(form.email) }}
            {{ form_row(form.message) }}

            <button type="submit">Відправити пропозицію</button>

        {{ form_end(form) }}
    </div>

    <div class="propositions-wrapper">
        <div class="proposition-one">
            {% for item in fanta.currentPageResults %}
                <h2>{{item.login}}</h2>
                <hr />
                <p>{{ item.message }}</p>
            {% endfor %}
        </div>
        <div class="pagination">
            {{ pagerfanta(fanta, 'twitter_bootstrap4') }}
        </div>
    </div>



{% endblock %}
