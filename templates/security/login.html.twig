{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/security/login.css') }}"
{% endblock %}

{% block body %}

<form class="form-signin" action="{{ path('login') }}" method="post">
    <h1 class="h3 mb-3 font-weight-normal">Sign In</h1>

    <label for="username" class="sr-only">Your login</label>
    <input type="text" id="username" class="form-control" placeholder="Your login" required autofocus name="_username" value="{{ last_username }}" />

    <label for="password" class="sr-only">Password</label>
    <input type="password" id="password" class="form-control" placeholder="Password" name="_password" required/>

    {% if error %}
        <small class="text-danger">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </small>
    {% endif %}

    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
</form>

{% endblock %}